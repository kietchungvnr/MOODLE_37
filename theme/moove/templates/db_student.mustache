var initKendoModule = function(courseid) {
	var kendoConfig = {};
		var settings = {			
			url: script,
			type : 'GET',
        	dataType: "json",
            contentType: 'application/json; charset=utf-8',
            data : {
            	courseid : courseid,
            	action : 'moduledetail'
        	}
		};
		var columns = [
			{
				template: function(e) {
					return e.name
				},
                field: "name",
                title: "{{#str}}activeresource,local_newsvnr{{/str}}",
                width: "150px"
			},
			{
                field: "finalgrade",
                title: '{{#str}}yourgrade,local_newsvnr{{/str}}',
                width: "120px"
			},
			{
                field: "finalgradecourse",
