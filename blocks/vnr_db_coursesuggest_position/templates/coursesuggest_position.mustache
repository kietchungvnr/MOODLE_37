
 <div class="container-fluid outline-none" id="suggestcourseslider" tabindex="1">
        <div class="row align-content-start">
                <div id="suggest-course-slider" class="owl-carousel owl-theme">
                   {{#suggestpositioncourse}}
                   {{#newscourse}}
                    <div class="post-slide6">
                    <div class="post-img">
                        {{{courseimage}}}
                        <div class="post-info">
                            <ul class="category">
                                <li>Học viên <a href="#">{{countstudent}}</a></li>
                                <li>Giáo viên <a href="#">{{fullnamet}}</a></li>
                               
                            </ul>
          
                        </div>
                    </div>
                    <div class="post-review">
                        <span class="icons">
                               {{{imageteacher}}}
                        </span>
                        <h3 class="post-title"><a href="{{{link}}}" title="{{fullname}}">{{#shortentext}}80, {{fullname}}{{/shortentext}}</a></h3>
                            <p class="post-teachername">{{#shortentext}}30, {{fullnamet}}{{/shortentext}}</p>
                            
                            <p class="post-description">{{#shortentext}}90, {{summary}}{{/shortentext}}</p>

                            <p class="post-enrolmethod">
                                {{#enrolmethod}}{{{enrolmethod}}}{{/enrolmethod}}
                                {{#progress}}
                                    <div class="progress">
                                      <div class="progress-bar" role="progressbar" aria-valuenow="{{progress}}"
                                      aria-valuemin="0" aria-valuemax="100" style="width:{{progress}}%">
                                        {{progress}}%
                                      </div>
                                    </div>
                                {{/progress}}
                            </p>
                    </div>
                </div>
                    {{/newscourse}}
                    {{/suggestpositioncourse}}                
                </div>
        </div>
    </div>
