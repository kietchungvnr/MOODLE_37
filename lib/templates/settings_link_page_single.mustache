{{!
    @template core/settings_link_page_single

    Displays the admin tree as a list of grouped links.

    Example context (json):
    {
        "text": "Root of menu",
        "key": "test0",
        "display": true,
        "children": []
    }
}}
{{#display}}
    {{#action}}
        <li class="d-flex">
            <a href="{{{action}}}">{{text}}</a>
            {{#node.isedit}}
                {{#hidden}}
                    <div class="config-admin switch" action="show" key={{key}}>
                        <input type="checkbox">
                        <span class="slider round"></span>
                    </div>
                {{/hidden}}
                {{^hidden}}
                    <div class="config-admin switch" action="hide" key={{key}}>
                        <input type="checkbox" checked>
                        <span class="slider round"></span>
                    </div>
                {{/hidden}}
            {{/node.isedit}}
        </li>
    {{/action}}
    {{^action}}
        <li><strong>{{text}}</strong></li>
    {{/action}}
    {{#children.count}}
        <li>
            <ul class="list-unstyled ml-2">
                {{#children}}
                    {{> core/settings_link_page_single }}
                {{/children}}

            </ul>
        </li>
    {{/children.count}}
{{/display}}
