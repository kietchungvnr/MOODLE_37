<style type="text/css">
    @import url("https://fonts.googleapis.com/css2?family=Noto+Sans:ital,wght@0,400;0,700;1,400;1,700&family=Roboto+Slab:wght@400;700&display=swap");

    @media (min-width: 576px) {
        .modal-dialog {
            max-width: 50%;
        }
    }
    #coppy-modules #svg_form_time {
        height: 15px;
        max-width: 80%;
        margin: auto;
        display: block;
    }

    #coppy-modules #svg_form_time circle,
    #coppy-modules #svg_form_time rect {
        fill: white;
    }

    #coppy-modules .button {
        background: #2d5b7c;
        border-radius: 5px;
        padding: 8px 12px;
        display: inline-block;
        margin: 10px;
        font-weight: bold;
        font-size: 15px;
        color: white;
        cursor: pointer;
        box-shadow: 0px 2px 5px rgb(0, 0, 0, 0.5);
    }

    #coppy-modules .disabled {
        display: none;
    }

    #coppy-modules section {
        /*padding: 20px;*/
        /*max-width: 300px;*/
        margin: 10px;
        background: white;
        background: rgba(255, 255, 255, 0.9);
        backdrop-filter: blur(10px);
        /*box-shadow: 0px 2px 10px rgba(0, 0, 0, 0.3);*/
        border-radius: 5px;
        transition: transform 0.2s ease-in-out;
    }

    #copy-module-modal .demo-section {
        max-width: none;
        width: auto;
    }

    #copy-module-modal .k-listbox {
        width: 326px;
        height: 350px;
    }

    #copy-module-modal .k-listbox:first-child {
        width: 360px;
        margin-right: 1px;
    }

    .k-ghost {
        display:none!important;
    }

    .custom-placeholder {
        opacity: 0.4;
    }

    #copy-module-modal .k-item {
        line-height: 1em;
    }

    /* Material Theme padding adjustment*/

    .k-material #copy-module-modal .k-item,
    .k-material #copy-module-modal .k-item.k-state-hover,
    .k-materialblack #copy-module-modal .k-item,
    .k-materialblack #copy-module-modall .k-item.k-state-hover {
        padding-left: 5px;
        border-left: 0;
    }

    .k-item > span {
        -webkit-box-sizing: border-box;
        -moz-box-sizing: border-box;
        box-sizing: border-box;
        display: inline-block;
        vertical-align: top;
        margin: 20px 10px 10px 5px;
    }

    #copy-module-modal .k-item > span:first-child,
    .k-item.k-drag-clue > span:first-child {
        -moz-box-shadow: inset 0 0 30px rgba(0,0,0,.3);
        -webkit-box-shadow: inset 0 0 30px rgba(0,0,0,.3);
        box-shadow: inset 0 0 30px rgba(0,0,0,.3);
        margin: 10px;
        width: 50px;
        height: 50px;
        border-radius: 50%;
        background-size: 100%;
        background-repeat: no-repeat;
    }

    #copy-module-modal h3,
    .k-item.k-drag-clue h3 {
        font-size: 1.2em;
        font-weight: normal;
        margin: 0 0 1px 0;
        padding: 0;
    }

    #copy-module-modal p {
        margin: 0;
        padding: 0;
        font-size: .8em;
    }
</style>
<form></form>
<div id="coppy-modules">
    <div id="svg_wrap"></div>
    <section>
        <span class="d-flex justify-content-center font-weight-bold mb-1">{{#str}}selectmodule, theme_moove{{/str}}</span>
        <div id="copy-module-modal" role="application">
            <div class="demo-section k-content wide d-flex justify-content-center">
                <select id="copy-module-optional"></select>
                <select id="copy-module-selected"></select>
            </div>
        </div>
    </section>
    <section>
        <div class="row d-flex align-items-center">
            <div class="col-md-2 col-6">
                <span>{{#str}}selectcourse, theme_moove{{/str}}:</span>
            </div>
            <div class="col-md-10 col-auto">
                <input id="list_course">
            </div>
        </div>
    </section>
    <span id="hanlde_message"></span>
    <div class="text-center">
        <div class="form-group" id="process" style="display:none;">
            <div class="progress mb-0 mt-2 progress">
                <div class="progress-bar progress-bar-striped active" role="progressbar" aria-valuemin="0" aria-valuemax="100" style=""></div>
            </div>
        </div>
        <div class="btn button" id="prev">
            ← {{#str}}previous_step, theme_moove{{/str}}
        </div>
        <div class="btn button" id="next">
            {{#str}}next_step, theme_moove{{/str}} →
        </div>
        <div class="btn button" id="submit">
            {{#str}}agreeandsubmit, theme_moove{{/str}}
        </div>
    </div>
</div>
{{#js}}

require(['core_course/copy_module'], function(CopyModule) {
    var templateData = {
        userid: {{{userid}}},
        courseid: {{{courseid}}}
    }
    CopyModule.initTemplateJs(templateData);
});

{{/js}}