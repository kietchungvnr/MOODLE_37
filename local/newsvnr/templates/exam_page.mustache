{{! Modal môn thi }}
<form id="md-form-subjectexam">
<div class="modal" id="modal-subjectexam">
  <div class="modal-dialog">
    <div class="modal-content">

      <!-- Modal Header -->
      <div class="modal-header">
        <h4 class="modal-title">Tạo môn thi</h4>

        <button type="button" class="close" data-dismiss="modal">&times;</button>
      </div>

      <!-- Modal body -->
      <div class="modal-body">
        <div id="show-info">
        </div>

       	<div class="form-group">
	      	<label>Tên:</label>
	     	<input type="text" class="form-control" id="subjectexam-name" name="subjectexam-name" required maxlength="15">
    	</div>
    	<div class="form-group">
	      	<label>Mã:</label>
	     	<input type="text" class="form-control" id="subjectexam-code" name="subjectexam-code" required>
    	</div>
    	<div class="form-group">
	      	<label>Tên viết tắt:</label>
	     	<input type="text" class="form-control" id="subjectexam-shortname" name="subjectexam-shortname" required>
    	</div>
    	<div class="form-group">
		  	<div class="form-check-inline">
				  <label class="form-check-label">
				    Kích hoạt<input type="checkbox" class="form-check-input ml-2" value="" checked id="subjectexam-visible">
				  </label>
			</div>
		</div>
    	<div class="form-group">
	      	<label>Mô tả:</label>
	     	<textarea class="form-control" rows="5" id="subjectexam-description"></textarea>
    	</div>
        <input type="hidden" class="form-control" id="subjectexam-id" name="subjectexam-id" required maxlength="15">
   
      </div>

      <!-- Modal footer -->
      <div class="modal-footer">
    		<button type="submit" class="btn btn-primary" id="subjectexam-submit">Submit</button>
        	<button type="button" class="btn btn-danger" data-dismiss="modal">Close</button>
      </div>
    </div>
  </div>
</div>
</form>