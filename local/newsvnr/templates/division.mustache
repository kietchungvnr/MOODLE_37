<script src="https://cdnjs.cloudflare.com/ajax/libs/jszip/2.4.0/jszip.min.js"></script>
<div class="full-flex mb-2">
	<div class="d-flex">
		<a class="btn btn-secondary mr-2 user-report-fuction disabled" id="deletedivision" href="javascript:;">Xóa</a>
		<a class="btn btn-secondary mr-2" href="javascript:;" data-toggle="modal" id="adddivision" data-target="#popup-add-division" >Tạo mới</a>
	</div>
</div>
<div id="division" class="kendo-custom kendo-user-report"></div>
<div class="modal" id="popup-add-division">
	<div class="modal-dialog">
		<!-- Modal content-->
		<div class="modal-content">
			<div class="modal-header">
			    <h4 class="modal-title"></h4>
			    <button type="button" class="close" data-dismiss="modal">&times;</button>
			</div>
			<div class="modal-body">
				<div class="form-group row">
				    <label for="inputPassword" class="col-sm-2 col-form-label">Tên chi nhánh<span class="ml-1 text-danger">(*)</span></label>
				    <div class="col-sm-9">
				      <input class="form-control" autocomplete="off" id="name">
				      <span class="warning-division text-danger" data="name"></span>
				    </div>
			  	</div>
				<div class="form-group row">
				    <label for="inputPassword" class="col-sm-2 col-form-label">Tên viết tắt<span class="ml-1 text-danger">(*)</span></label>
				    <div class="col-sm-9">
				      <input class="form-control" autocomplete="off" id="shortname">
				      <span class="warning-division text-danger" data="shortname"></span>
				    </div>
			  	</div>
				<div class="form-group row">
				    <label for="inputPassword" class="col-sm-2 col-form-label">Mã<span class="ml-1 text-danger">(*)</span></label>
				    <div class="col-sm-9">
				      <input class="form-control" autocomplete="off" id="code">
				      <span class="warning-division text-danger" data="code"></span>
				    </div>
			  	</div>
				<div class="form-group row">
				    <label for="inputPassword" class="col-sm-2 col-form-label">Fax</label>
				    <div class="col-sm-9">
				      <input class="form-control" autocomplete="off" id="fax">
				    </div>
			  	</div>
				<div class="form-group row">
				    <label for="inputPassword" class="col-sm-2 col-form-label">Di động</label>
				    <div class="col-sm-9">
				      <input class="form-control" autocomplete="off" id="phone">
				    </div>
			  	</div>
				<div class="form-group row">
				    <label for="inputPassword" class="col-sm-2 col-form-label">Website</label>
				    <div class="col-sm-9">
				      <input class="form-control" autocomplete="off" id="website">
				    </div>
			  	</div>
				<div class="form-group row">
				    <label for="inputPassword" class="col-sm-2 col-form-label">Địa chỉ</label>
				    <div class="col-sm-9">
				      <input class="form-control" autocomplete="off" id="address">
				    </div>
			  	</div>
				<div class="form-group row">
				    <label for="inputPassword" class="col-sm-2 col-form-label">Kích hoạt</label>
				    <div class="col-sm-9">
				    	<input class="apple-switch" type="checkbox" id="visible" checked>
				    </div>
			  	</div>
			</div>
		    <div class="modal-footer">
		        <button type="button" class="btn btn-primary" id="createdivision" action="" divisionid="">Save changes</button>
		        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
		    </div>
		</div>
	</div>
</div>
<script type="text/javascript">
    const activeDevision = (divisionid,action) => {
        require(['jquery', 'core/config'], ($, Config) => {
            var url = Config.wwwroot + "/local/newsvnr/division/ajax/division_action.php";
            var settings = {
                type:"GET",
                processData:true,
                data:{
                    divisionid:divisionid,
                    action: action
                }
            };
            $.ajax(url,settings).then(function(response) {
                var grid = $('#division').data("kendoGrid");
                grid.dataSource.read();
            });
        })
    }
</script>