
<div class="container-fuld">
	<div class="row">
		<div class="col-md-3 mb-1">
			<div class="card">
				<div data-region="treeview-iframe" class="card-body p-3" >
					<div class="input-group">
						<input type="text" class="form-control border border-dark rounded" placeholder="Tìm kiếm" aria-label="" aria-describedby="" id="search-term">
					</div>
					   <div class="demo-section k-content">
               <div id="treeview-sprites" style="background-color: #f9f9f9"></div>
            </div>
					
				</div>
			</div>
		</div>
		<div class="col-md-9">
			<div class="card">
				<div class="card-body p-3">
					<div data-region="buttons-iframe">
						<div class="row">
							<div class="col-md-3 p-0">
								<button class="btn btn-primary w-100" type="button" data-toggle="collapse" data-target="#orgcate_tb_wrapper" aria-expanded="false" aria-controls="orgcate_tb_wrapper" id="orgstructuredetail" style="border-right-color: wheat;" disabled>{{#str}}orgstructuredetail,local_newsvnr{{/str}}</button>
							</div>
							<div class="col-md-3 p-0">
								<button class="btn btn-primary w-100" type="button" data-toggle="collapse" data-target="#orgjobtitle_tb_wrapper" aria-expanded="false" aria-controls="orgjobtitle_tb_wrapper" id="list_users" disabled>{{#str}}userlist,local_newsvnr{{/str}}</button>
							</div>
						</div>
					</div>
					<div data-region="table-iframe">
						<div id="showtable_data" class="mt-2 mb-2"></div>
						<div id="show_orgform" class="d-none"></div>
					</div>
					
				</div>
			</div>	
		</div>
	</div>
	<div id="showorg_data"></div>
	<!-- Modal -->
	<div id="showmodal_data">
		
	</div>
</div>
{{#js}}
var orgstructuredetail = document.getElementById("orgstructuredetail");
var list_users = document.getElementById("list_users");
$("#orgstructuredetail").click(function(){
	orgstructuredetail.classList.remove("btn-primary");
	list_users.classList.add("btn-primary");
	orgstructuredetail.classList.add("btn-secondary");
});
$("#list_users").click(function(){
	list_users.classList.remove("btn-primary");
	list_users.classList.add("btn-secondary");
	orgstructuredetail.classList.add("btn-primary");
});
{{/js}}

