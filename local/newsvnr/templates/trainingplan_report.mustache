<script src="https://cdnjs.cloudflare.com/ajax/libs/jszip/2.4.0/jszip.min.js"></script>
<div class="d-flex mb-2 justify-content-between align-items-center" style="padding:1rem;background: white">
	<div class="page-header-headings">
		<h2>Báo cáo kế hoạch đào tạo học viên</h2>
	</div>
	<div class="d-flex">
		<div class="report-button" id="dropdownMenuButton" style="background: #2d5b7c">
			<i class="fa fa-search" aria-hidden="true"></i>
		</div>
		<div class="report-button" id="exporttable">
			<i class="fa fa-file-excel-o" aria-hidden="true"></i>
		</div>
		<div class="report-button" id="resettable">
			<i class="fa fa-refresh" aria-hidden="true"></i>
		</div>
		<div class="report-button" data-toggle="modal" data-target="#modalreport">
			<i class="fa fa-sign-out" aria-hidden="true"></i>
		</div>
	  	<div class="dropdown-menu user-report d-none" aria-labelledby="dropdownMenuButton" style="top: 92px;">
	        <ul class="nav-tabs nav multi-tab" tab="searchuser" style="padding: 0 25px;">
	            <li class="nav-item"><a href="javascript:void(0)" class="nav-link active" data-key="account">Thông tin tìm kiếm</a></li>
	            <li class="nav-item"><a href="javascript:void(0)" class="nav-link" data-key="department">Phòng ban</a></li>
	        </ul>
	        <div class="tab-content" tab="searchuser" style="padding: 1.25rem">
	            <div data="account" class="tab-pane active">
	            	<div class="row">
	                	<div class="form-group col-md-6">
						    <label>Tên học viên</label>
						    <input placeholder="Nhập tên học viên" class="form-control mt-1" id="username">
						</div>
						<div class="form-group col-md-6">
							<label >Lộ trình hiện tại</label>
						    <input class="form-control mt-1" id="route">
						</div>
		              	<div class="form-group col-md-6">
							<label >Ngày hoàn thành</label>
							<div class="row">
								<div class="col-md-6">
							    	<input placeholder="Từ ngày" class="form-control mt-1" id="start_timeaccess">
							    </div>
							    <div class="col-md-6">
							    	<input placeholder="Đến ngày" class="form-control mt-1" id="end_timeaccess">
							    </div>
							</div>
						</div>
{{! 						<div class="form-group col-md-6">
							<label >Điểm số</label>
							<div class="row">
								<div class="col-md-6">
							    	<input placeholder="Thang điểm" class="form-control mt-1" id="start_timeaccess">
							    </div>
							    <div class="col-md-6">
							    	<input placeholder="Điểm" class="form-control mt-1" id="end_timeaccess">
							    </div>
							</div>
						</div> }}
						<div class="form-group col-md-6">
							<label >Tiến độ học</label>
							<div class="row">
								<div class="col-md-6">
							    	<input placeholder="Từ phần trăm" class="form-control mt-1" id="start_process">
							    </div>
							    <div class="col-md-6">
							    	<input placeholder="Đến phần trăm" class="form-control mt-1" id="end_process">
							    </div>
							</div>
						</div>
						<div class="form-group col-md-6">
							<label >Trạng thái hoàn thành</label>
							<input placeholder="Điểm" class="form-control mt-1" id="status">
						</div>
					</div>
	                <div class="text-right">
	            		<button type="button" class="btn btn-primary" id="searchaccount">Tìm kiếm</button>
	            	</div>
	            </div>
	            <div data="department" class="tab-pane">
	            	<div class="row">
	                	<div class="form-group col-md-6">
						    <label>Loại phòng ban</label>
						    <input class="form-control mt-1" id="orgstructure_category">
						</div>
						<div class="form-group col-md-6">
							<label >Phòng ban</label>
						    <input class="form-control mt-1" id="orgstructure">
						</div>
		              	<div class="form-group col-md-6">
						    <label>Chức danh</label>
						    <input class="form-control mt-1" id="orgstructure_jobtitle">
						</div>
						<div class="form-group col-md-6">
							<label >Chức vụ</label>
						    <input class="form-control mt-1" id="orgstructure_position">
						</div>
					</div>
	              	<div class="text-right">
	            		<button type="button" class="btn btn-primary" id="searchorgs">Tìm kiếm</button>
	            	</div>
	            </div>
	        </div>
	  	</div>
	 </div>
</div>
<div id="trainingplan_report" style="padding: 1.25rem"></div>
<div class="modal" id="modalreport">
	<div class="modal-dialog" style="width: 600px">
		<!-- Modal content-->
		<div class="modal-content">
			<div class="modal-header">
			    <h4 class="modal-title">Chuyển báo cáo</h4>
			    <button type="button" class="close" data-dismiss="modal">&times;</button>
			</div>
			<div class="modal-body" style="height: 150px">
				<label >Báo cáo</label>
			    <input class="form-control mt-1" id="report">
			</div>
			<div class="modal-footer">
			    <button type="button" class="btn btn-primary" id="changereport">Chuyển</button>
			    <button type="button" class="btn btn-danger" data-dismiss="modal" id="cancel-popup">{{#str}}cancel, local_newsvnr{{/str}}</button>
			</div>
		</div>
	</div>
</div>

{{#js}}
	$('#dropdownMenuButton').click(function() {
		$('.dropdown-menu').toggleClass('d-none');
	})
{{/js}}