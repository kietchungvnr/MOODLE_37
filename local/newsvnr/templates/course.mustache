<style type="text/css">
   .see-more-by-cate{
   margin-left: 42%;
   }
   .k-treeview span.k-in{
   cursor: pointer;
   }
   .link {padding: .75rem 1.5rem;
   font-size: 1.171875rem;
   line-height: 1.5;
   border-radius: 50% !important;
   margin: 0 5px;
   cursor: pointer;
   font-weight: bold;
   }
   .disabled {cursor:not-allowed;color: #bccfd8;}
   .question {font-weight:bold;}
   .answer{padding-top: 10px;}
   #paginationCourse{margin-top: 20px;padding-top: 30px;border-top: #F0F0F0 1px solid; padding-bottom: 25px; margin: 0 auto;}
   .dot {padding: 10px 15px;background: transparent;border-right: #bccfd8 1px solid;}
   #overlay {background-color: rgba(0, 0, 0, 0.6);z-index: 999;position: absolute;left: 0;top: 0;width: 100%;height: 100%;display: none;}
   #overlay div {position:absolute;left:50%;top:50%;margin-top:-32px;margin-left:-32px;}
   .page-content {padding: 20px;margin: 0 auto;}
   .pagination-setting {padding:10px; margin:5px 0px 10px;border:#bccfd8  1px solid;color:#607d8b;}
   /* LOAD SPINNER */
   .center-parent {
   position: fixed;
   top: 0;
   bottom: 0;
   left: 0;
   right: 0;
   width: 100%;
   height: 100%;
   z-index: 1000;
   background:#00000096;
   display: none;
   }
   .center-container {
   width: 60px;
   height: 60px;
   font-size: 60px;
   position: absolute;
   top: 50%;
   left: 50%;
   margin-top: -30px;
   margin-right: 0;
   margin-bottom: 0;
   margin-left: -30px;
   z-index: 100000;
   color: #fff;
   }
   /* END LOAD SPINER */
</style>
{{#course}}
<div class="container-fluid">
   <div class="course-box">
      <div class="row">
         <h4 class="title">{{#str}}popular, local_newsvnr{{/str}}</h4>
      </div>
      <div class="row">
         <div id="news-slider6" class="owl-carousel owl-theme">
            {{#popularcourse}}
            {{#newscourse}}
            <div class=" post-slide6">
               <div class="post-img">
                  {{{courseimage}}}
                  <div class="post-info">
                     <ul class="category">
                        <li>{{#str}}countstudent, local_newsvnr{{/str}}: <a href="#">{{countstudent}}</a></li>
                        <li>{{#str}}teachername, local_newsvnr{{/str}}: <a href="#">{{fullnamet}}</a></li>
                     </ul>
                  </div>
               </div>
               <div class="post-review">
                  <span class="icons">
                  {{{imageteacher}}}
                  </span>
                  <h3 class="post-title"><a href="{{{link}}}" title="{{fullname}}">{{#shortentext}}80, {{{fullname}}}{{/shortentext}}</a></h3>
                  <p class="post-teachername">{{#shortentext}}30, {{fullnamet}}{{/shortentext}}</p>
                  <p class="post-description">{{#shortentext}}90, {{summary}}{{/shortentext}}</p>
                  <p class="post-enrolmethod">
                     {{#progress}}
                  <div class="progress">
                     <div class="progress-bar" role="progressbar" aria-valuenow="{{progress}}"
                        aria-valuemin="0" aria-valuemax="100" style="width:{{progress}}%">
                        {{{progress}}}%
                     </div>
                  </div>
                  {{/progress}}
                  {{^progress}}
                  {{#enrolmethod}}{{{enrolmethod}}}{{/enrolmethod}}
                  {{/progress}}
                  </p>
               </div>
            </div>
            {{/newscourse}}
            {{/popularcourse}}                
         </div>
      </div>
      <div class="row" style="margin-top: 5px">
         <h4 class="title">{{#str}}newest, local_newsvnr{{/str}}</h4>
      </div>
      <div class="course-new-latest">
         <div class="row">
            <div id="newest-course-slider" class="owl-carousel owl-theme">
               {{#newestcourse}}
               <div class=" post-slide6">
                  <div class="post-img">
                     {{{imageurl}}}
                     <div class="post-info">
                        <ul class="category">
                           <li>{{#str}}countstudent, local_newsvnr{{/str}}: <a href="#">{{countstudent}}</a></li>
                           <li>{{#str}}teachername, local_newsvnr{{/str}}: <a href="#">{{fullnamet}}</a></li>
                        </ul>
                     </div>
                  </div>
                  <div class="post-review">
                     <span class="icons">
                     {{{imageteacher}}}
                     </span>
                     <h3 class="post-title"><a href="{{{link}}}" title="{{fullname}}">{{#shortentext}}80, {{{fullnameurl}}}{{/shortentext}}</a></h3>
                     <p class="post-teachername">{{#shortentext}}30, {{fullnamet}}{{/shortentext}}</p>
                     <p class="post-description">{{#shortentext}}90, {{summary}}{{/shortentext}}</p>
                     <p class="post-enrolmethod">
                        {{#enrolmethod}}{{{enrolmethod}}}{{/enrolmethod}}
                        {{#progress}}
                     <div class="progress">
                        <div class="progress-bar" role="progressbar" aria-valuenow="{{progress}}"
                           aria-valuemin="0" aria-valuemax="100" style="width:{{progress}}%">
                           {{progress}}%
                        </div>
                     </div>
                     {{/progress}}
                     </p>
                  </div>
               </div>
               {{/newestcourse}}
            </div>
         </div>
      </div>
      {{!            
      <div class="course-new-latest-search" style="margin-right: -15px;margin-left: -15px;">
