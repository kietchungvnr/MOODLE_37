      <div class="row" style="margin-top: 5px">
         <h4 class="title">{{#str}}allcourse, local_newsvnr{{/str}}</h4>
      </div>
      <div class="course-all">
         <div class="row">
            <div id="all-course-slider" class="owl-carousel owl-theme">
               {{#allcourse}}
               <div class=" post-slide6">
                  <div class="post-img">
                     {{{imageurl}}}
                     <div class="post-info">
                        <ul class="category">
                           <li>{{#str}}countstudent, local_newsvnr{{/str}}: <a href="#">{{countstudent}}</a></li>
                           <li>{{#str}}teachername, local_newsvnr{{/str}}: <a href="#">{{fullnamet}}</a></li>
